<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorSecondary</item>

        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <!--<item name="fontFamily">@font/notosans_jp_regular</item>-->
    </style>

    <!--######################## Button styles #########################-->
    <style name="AppTheme.DefaultButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <!--<item name="fontFamily">@font/notosans_jp_bold</item>-->
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/textSizeDefault</item>
    </style>
    <!--######################## Button styles end #########################-->

    <!--######################## Text styles #########################-->
    <style name="AppTheme.DefaultText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/textSizeDefault</item>
        <item name="android:textColor">@color/colorTextDefault</item>
        <item name="android:includeFontPadding">false</item>
        <!--<item name="fontFamily">@font/notosans_jp_regular</item>-->
    </style>

    <!--######################## Text styles end #########################-->

    <!--######################## Extra styles #########################-->
    <!--Custom input text styles-->
    <style name="AppTheme.TextInputLayout.Default" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/color_box_stroke_selector</item>
        <item name="colorControlNormal">@color/colorStrokeOutline</item>
        <item name="colorControlActivated">@color/colorTextHint</item>
        <item name="colorControlHighlight">@color/colorStrokeOutline</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
        <item name="colorOnSurface">@color/colorStrokeOutline</item>
        <item name="android:textColor">@color/colorTextDefault</item>
        <item name="android:includeFontPadding">false</item>
        <!--<item name="fontFamily">@font/notosans_jp_regular</item>-->
        <item name="android:textDirection">anyRtl</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">@dimen/textSizeDefault</item>
    </style>

    <style name="AppTheme.TextInputLayout.DefaultHintAppearance" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textDirection">locale</item>
        <!--<item name="fontFamily">@font/notosans_jp_regular</item>-->
        <item name="android:gravity">start</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@color/colorTextHint</item>
        <item name="android:textSize">@dimen/textSizeHint</item>
    </style>
