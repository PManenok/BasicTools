<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="InputFieldView">
        <!--Common-->
        <attr name="inputPaddingTop" format="dimension" />
        <attr name="inputPaddingBottom" format="dimension" />
        <attr name="inputShowBottomContainer" format="boolean" />
        <attr name="inputIsWrap" format="boolean" />
        <attr name="inputClickViewEnabled" format="boolean" />
        <attr name="inputIsStartChecked" format="boolean"/>
        <attr name="inputIsEndChecked" format="boolean"/>
        <attr name="inputIsEnableable" format="boolean" />

        <attr name="state_error" format="boolean"/>

        <!--Label-->
        <attr name="inputLabel" format="string" />
        <attr name="inputLabelType">
            <enum name="on_top" value="0" />
            <enum name="on_line" value="1" />
            <enum name="hide" value="2" />
            <enum name="on_top_multi" value="3" />
            <enum name="on_line_multi" value="4" />
            <enum name="on_top_no_start_padding" value="5" />
        </attr>
        <attr name="inputLabelTextStyle" format="reference" />
        <attr name="inputLabelMaxLines" format="integer" />
        <attr name="inputLabelExtraTopMargin" format="dimension" />

        <!--Input Text-->
        <attr name="inputEditTextStyle" format="reference" />
        <attr name="android:hint" format="string" />
        <attr name="android:text" format="string" />
        <attr name="android:inputType" format="integer" />
        <attr name="inputEditable" format="boolean" />
        <attr name="android:maxLines" format="integer" />
        <attr name="android:textDirection" format="integer" />
        <attr name="inputEditViewMinHeight" format="dimension" />
        <attr name="android:imeOptions" format="integer" />

        <!--Prefix-->
        <attr name="inputPrefix" format="string" />
        <attr name="inputPrefixTextStyle" format="reference" />

        <!--Icons-->
        <attr name="inputPasswordToggle" format="reference" />
        <attr name="inputCheckToggle" format="reference" />
        <attr name="inputIconsSize" format="dimension" />
        <attr name="inputIconsPadding" format="dimension" />

        <!--Start Icon-->
        <attr name="inputStartDrawable" format="reference" />
        <attr name="inputStartDrawableTint" format="reference" />
        <attr name="inputStartIconMode">
            <!-- The view will display a custom icon specified by the user. -->
            <enum name="custom" value="-1" />
            <!-- No end icon. -->
            <enum name="none" value="0" />
            <!-- The view will display an end icon if it is set, but no action will be done. -->
            <enum name="default_mode" value="1" />
            <!-- The view will display a toggle that displays/hides a check box. -->
            <enum name="checkable" value="2" />
            <!-- The view will display a progress bar. -->
            <enum name="progress" value="3" />
        </attr>

        <!--End Icon-->
        <attr name="inputEndDrawable" format="reference" />
        <attr name="inputEndDrawableTint" format="color" />
        <attr name="inputEndIconMode">
            <!-- The view will display a custom icon specified by the user. -->
            <enum name="custom" value="-1" />
            <!-- No end icon. -->
            <enum name="none" value="0" />
            <!-- The view will display a toggle when the EditText has a password. -->
            <enum name="password_toggle" value="1" />
            <!-- The view will display a clear text button while the EditText contains input. -->
            <enum name="clear_text" value="2" />
            <!-- The view will display a toggle that displays/hides a check box. -->
            <enum name="checkable" value="3" />
            <!-- The view will display end icon in error mode. -->
            <enum name="error" value="4" />
            <!-- The view will display end text instead of icon -->
            <enum name="text" value="5"/>
        </attr>

        <!--End Text-->
        <attr name="inputEndText" format="string"/>
        <attr name="inputEndTextStyle" format="reference"/>

        <!--Help-->
        <attr name="inputHelp" format="string" />
        <attr name="inputHelpTextStyle" format="reference" />

        <!--Error-->
        <attr name="inputError" format="string" />
        <attr name="inputErrorTextStyle" format="reference" />
        <attr name="inputErrorIcon" format="reference" />
        <attr name="inputHideErrorIcon" format="boolean" />

        <!--Box-->
        <attr name="inputStrokeColor" format="reference" />
        <attr name="inputFocusedStrokeColor" format="reference" />
        <attr name="inputBoxBgColor" format="color" />
        <attr name="inputStrokeRadius" format="dimension" />
        <attr name="inputStrokeWidth" format="dimension" />
        <attr name="inputBoxVisibility">
            <!-- Visible on screen; the default value. -->
            <enum name="visible" value="0" />
            <!-- Not displayed, but taken into account during layout (space is left for it). -->
            <enum name="invisible" value="1" />
            <!-- Completely hidden, as if the view had not been added. -->
            <enum name="gone" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="BoxView">
        <attr name="boxVStartPadding" format="dimension" />
        <attr name="boxVTopClip" format="dimension" />
        <attr name="boxVStrokeRadius" format="dimension" />
        <attr name="boxVStrokeWidth" format="dimension" />
        <attr name="boxVStrokeColor" format="color" />
        <attr name="boxVBgColor" format="color" />
    </declare-styleable>

</resources>