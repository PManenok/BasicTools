<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorSecondary</item>
    </style>

    <style name="FieldStyle">
        <item name="inputEditTextStyle">@style/EditTextStyle</item>
        <item name="inputStrokeWidth">1dp</item>
        <item name="inputIconsSize">@dimen/spacing_32</item>
        <item name="inputIconsPadding">@dimen/spacing_4</item>
        <item name="inputBoxBgColor">@color/main_color_4</item>
        <item name="inputShowBottomContainer">false</item>
        <item name="inputLabelType">hide</item>
        <item name="inputActiveStrokeColor">@color/main_color_4</item>
        <item name="inputStartDrawableTint">@color/main_color_2</item>
        <item name="inputEndDrawableTint">@color/main_color_2</item>
    </style>

    <style name="TextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="TextStyle.Center">
        <item name="android:gravity">center</item>
    </style>

    <style name="TextStyle.Normal16">
        <item name="android:textSize">@dimen/_11ssp</item>
    </style>

    <style name="EditTextStyle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColorHint">@color/main_color_2</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:inputType">text</item>
        <item name="singleLine">true</item>
    </style>

    <style name="ProgressBarStyle" parent="Widget.AppCompat.ProgressBar">
        <item name="android:minHeight">@dimen/spacing_80</item>
        <item name="android:minWidth">@dimen/spacing_80</item>
        <item name="android:maxHeight">@dimen/spacing_80</item>
        <item name="android:maxWidth">@dimen/spacing_80</item>
    </style>

    <style name="NumpadStyle">
        <item name="android:minWidth">@dimen/spacing_300</item>
        <item name="android:minHeight">@dimen/spacing_400</item>
    </style>

    <style name="CustomSwitcherTitleTextStyle">
        <item name="android:textColor">@color/purple</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="CustomSwitcherInfoTextStyle">
        <item name="android:textColor">@color/purple_light</item>
        <item name="android:textStyle">italic</item>
    </style>


    <style name="TopbarTextStyle">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TopbarTextStyle.Red" parent="TopbarTextStyle">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="PinStyle">
        <item name="pinAmount">6</item>
        <item name="pinInAnimationDuration">150</item>
        <item name="pinOutAnimationDuration">150</item>
        <item name="pinBetweenMargin">@dimen/spacing_8</item>
        <item name="pinFilledIcon">@drawable/ic_pin_star_filled</item>
        <item name="pinUnfilledIcon">@drawable/ic_pin_star_unfilled</item>
        <item name="pinFilledTint">@color/colorStrokeOutline</item>
        <item name="pinUnfilledTint">@color/colorStrokeOutline</item>
    </style>

    <style name="TopBarStyle">
        <item name="barContainerHeight">@dimen/spacing_56</item>
        <item name="barContainerPaddingEnd">@dimen/spacing_8</item>
        <item name="barContainerPaddingStart">@dimen/spacing_8</item>

        <item name="barNavIcon">@drawable/ic_navigate_back</item>
        <item name="barNavIconSize">@dimen/spacing_48</item>
        <item name="barNavIconPadding">@dimen/spacing_8</item>
        <item name="barNavIconTint">@color/main_color_2</item>
        <item name="barShowNavIcon">true</item>

        <item name="barActionIcon">@drawable/ic_cancel</item>
        <item name="barActionIconSize">@dimen/spacing_56</item>
        <item name="barActionIconPadding">@dimen/spacing_8</item>
        <item name="barActionIconTint">@color/main_color_2</item>
        <item name="barShowActionIcon">true</item>

        <item name="barTitleTextAppearance">@style/TextStyle</item>
        <item name="barTitlePaddingEnd">@dimen/spacing_8</item>
        <item name="barTitlePaddingStart">@dimen/spacing_8</item>

        <item name="barDividerColor">@color/main_color_4</item>
        <item name="barDividerHeight">@dimen/spacing_1</item>
        <item name="barShowDivider">true</item>
    </style>

    <!--##################################### Button styles #####################################-->
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">@dimen/spacing_8</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">@dimen/spacing_56</item>
    </style>

    <style name="OutlineButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="cornerRadius">@dimen/spacing_10</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">@dimen/spacing_56</item>
    </style>

    <style name="TextButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">@dimen/spacing_56</item>
    </style>

    <style name="TextButtonStyle.Mini">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:minHeight">@dimen/spacing_48</item>
    </style>

    <!--################################## Button styles END ####################################-->

</resources>
