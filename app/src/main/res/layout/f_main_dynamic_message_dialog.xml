<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/spacing_12">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical">


                <com.google.android.material.textview.MaterialTextView
                    style="@style/TextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/message_dialog_dynamic_case" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/spacing_12">

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/TextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/spacing_8"
                        android:text="@string/title" />

                    <by.esas.tools.inputfieldview.InputFieldView
                        android:id="@+id/f_dynamic_message_dialog_title"
                        style="@style/FieldStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/hint_add_value" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_4"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/TextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/spacing_8"
                        android:text="@string/message" />

                    <by.esas.tools.inputfieldview.InputFieldView
                        android:id="@+id/f_dynamic_message_dialog_message"
                        style="@style/FieldStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/hint_add_value" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_16"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/TextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/spacing_8"
                        android:text="@string/custom_switch_choose_title_style" />

                    <Spinner
                        android:id="@+id/f_dynamic_message_dialog_spinner_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:entries="@array/title_styles" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_8"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/TextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/spacing_8"
                        android:text="@string/message_dialog_dynamic_choose_message_style" />

                    <Spinner
                        android:id="@+id/f_dynamic_message_dialog_spinner_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:entries="@array/title_styles" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_8"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/TextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/spacing_8"
                        android:text="@string/message_dialog_dynamic_make_closeable" />

                    <CheckBox
                        android:id="@+id/f_dynamic_message_dialog_close_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_8"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/TextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/spacing_8"
                        android:text="@string/message_dialog_dynamic_add_items_list" />

                    <CheckBox
                        android:id="@+id/f_dynamic_message_dialog_items_list_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_16"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/TextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/spacing_8"
                        android:text="@string/message_dialog_dynamic_positive_button" />

                    <by.esas.tools.inputfieldview.InputFieldView
                        android:id="@+id/f_dynamic_message_dialog_btn_positive"
                        style="@style/FieldStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/hint_add_value" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/TextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/spacing_8"
                        android:text="@string/message_dialog_dynamic_positive_button_appearance" />

                    <CheckBox
                        android:id="@+id/f_dynamic_message_dialog_btn_positive_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/f_dynamic_message_dialog_btn_positive_style_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_12"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/TextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/spacing_8"
                        android:text="@string/text_style" />

                    <Spinner
                        android:id="@+id/f_dynamic_message_dialog_btn_positive_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/spacing_12"
                        android:entries="@array/title_styles" />

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/TextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/spacing_8"
                        android:text="@string/message_dialog_dynamic_all_caps" />

                    <CheckBox
                        android:id="@+id/f_dynamic_message_dialog_btn_positive_caps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/f_dynamic_message_dialog_btn_positive_color_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_12"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/TextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/spacing_8"
                        android:text="@string/message_dialog_dynamic_choose_background_color" />

                    <include
                        android:id="@+id/f_dynamic_message_dialog_btn_positive_color"
                        layout="@layout/color_radio_group" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_16"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/TextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/spacing_8"
                        android:text="@string/message_dialog_dynamic_negative_button" />

                    <by.esas.tools.inputfieldview.InputFieldView
                        android:id="@+id/f_dynamic_message_dialog_btn_negative"
                        style="@style/FieldStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/hint_add_value" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/TextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/spacing_8"
                        android:text="@string/message_dialog_dynamic_negative_button_appearance" />

                    <CheckBox
                        android:id="@+id/f_dynamic_message_dialog_btn_negative_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/f_dynamic_message_dialog_btn_negative_style_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_12"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/TextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/spacing_8"
                        android:text="@string/text_style" />

                    <Spinner
                        android:id="@+id/f_dynamic_message_dialog_btn_negative_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/spacing_12"
                        android:entries="@array/title_styles" />

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/TextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/spacing_8"
                        android:text="@string/message_dialog_dynamic_all_caps" />

                    <CheckBox
                        android:id="@+id/f_dynamic_message_dialog_btn_negative_caps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/f_dynamic_message_dialog_btn_negative_color_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_12"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/TextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/spacing_8"
                        android:text="@string/message_dialog_dynamic_choose_background_color" />

                    <include
                        android:id="@+id/f_dynamic_message_dialog_btn_negative_color"
                        layout="@layout/color_radio_group" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/TextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/spacing_8"
                        android:text="@string/message_dialog_dynamic_neutral_button" />

                    <by.esas.tools.inputfieldview.InputFieldView
                        android:id="@+id/f_dynamic_message_dialog_btn_neutral"
                        style="@style/FieldStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/hint_add_value" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/TextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/spacing_8"
                        android:text="@string/message_dialog_dynamic_neutral_button_appearance" />

                    <CheckBox
                        android:id="@+id/f_dynamic_message_dialog_btn_neutral_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/f_dynamic_message_dialog_btn_neutral_style_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_12"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/TextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/spacing_8"
                        android:text="@string/text_style" />

                    <Spinner
                        android:id="@+id/f_dynamic_message_dialog_btn_neutral_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/spacing_12"
                        android:entries="@array/title_styles" />

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/TextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/spacing_8"
                        android:text="@string/message_dialog_dynamic_all_caps" />

                    <CheckBox
                        android:id="@+id/f_dynamic_message_dialog_btn_neutral_caps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/f_dynamic_message_dialog_btn_neutral_color_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_12"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/TextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/spacing_8"
                        android:text="@string/message_dialog_dynamic_choose_background_color" />

                    <include
                        android:id="@+id/f_dynamic_message_dialog_btn_neutral_color"
                        layout="@layout/color_radio_group" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/f_dynamic_message_dialog_show_button"
            style="@style/ButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/message_dialog_dynamic_show_dialog"
            android:layout_marginTop="@dimen/spacing_30"
            android:layout_marginBottom="@dimen/spacing_8"/>

    </LinearLayout>

</layout>