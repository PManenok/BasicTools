<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/f_login_registration_number_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/f_login_registration_number_layout_error"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/f_login_registration_number_layout_box"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/bg_input_box"
            app:layout_constraintBottom_toBottomOf="@id/f_login_registration_number_layout_container"
            app:layout_constraintTop_toTopOf="@id/f_login_registration_number_layout_container" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/f_login_registration_number_layout_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/colorBackground"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:text="Label"
            android:textColor="@color/colorTextHint"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/f_login_registration_number_layout_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/f_login_registration_number_layout_spinner"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_gravity="center_vertical"
                android:paddingStart="0dp"
                android:paddingLeft="0dp"
                android:paddingEnd="2dp"
                android:paddingRight="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:listitem="@layout/i_field_spinner_drop_down" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/f_login_registration_number_layout_input"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:background="@null"
                android:drawableEnd="@drawable/ic_password_visible"
                android:drawableRight="@drawable/ic_password_visible"
                android:drawablePadding="6dp"
                android:inputType="phone"
                android:gravity="center_vertical"
                android:paddingStart="4dp"
                android:paddingLeft="4dp"
                android:paddingEnd="12dp"
                android:paddingRight="12dp"
                android:textColor="@color/colorTextDefault"
                android:textSize="16sp"
                app:drawableTint="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/f_login_registration_number_layout_spinner"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="2912345678" />

            <View
                android:id="@+id/f_login_registration_number_layout_end_click"
                android:layout_width="30dp"
                android:layout_height="0dp"
                android:layout_marginEnd="9dp"
                android:layout_marginRight="9dp"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/f_login_registration_number_layout_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginLeft="13dp"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:alpha="0.8"
        android:textColor="@color/colorTextDefault"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/f_login_registration_number_layout2"
        tools:text="Some help or error text" />
</merge>