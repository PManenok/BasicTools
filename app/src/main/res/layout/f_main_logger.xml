                    style="@style/FieldStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/spacing_12"
                    android:layout_weight="1"
                    android:hint="@string/hint_add_value"
                    android:text="@={viewModel.category}"
                    app:inputLabel="@string/logger_category"
                    app:inputLabelType="on_line" />

                <Button
                    android:id="@+id/f_logger_vm_category_btn"
                    style="@style/ButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/logger_vm_case_2_btn" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_8"
                android:orientation="horizontal">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/spacing_12"
                    android:layout_weight="1"
                    android:text="@string/logger_vm_case_3" />

                <Button
                    style="@style/ButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:onClick="@{()->viewModel.logError()}"
                    android:text="@string/logger_vm_case_3_btn" />
