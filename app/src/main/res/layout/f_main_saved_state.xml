<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="by.esas.tools.screens.saved_state_vm.SavedStateVM" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_12">

        <com.google.android.material.textview.MaterialTextView
            style="@style/TextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/saved_state_case"/>

        <by.esas.tools.inputfieldview.InputFieldView
            android:id="@+id/f_saved_state_field_1"
            style="@style/FieldStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@={viewModel.firstField}"
            android:layout_marginTop="@dimen/spacing_8"
            android:hint="@string/hint_add_value"/>

        <by.esas.tools.inputfieldview.InputFieldView
            android:id="@+id/f_saved_state_field_2"
            style="@style/FieldStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{viewModel.secondField}"
            android:layout_marginTop="@dimen/spacing_8"
            android:hint="@string/hint_add_value"/>

    </LinearLayout>
</layout>