<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/v_list_header_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/v_list_header_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/v_list_header_action_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Products (%d)" />

    <FrameLayout
        android:id="@+id/v_list_header_action_container"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/spacing_1"
        app:layout_constraintBottom_toBottomOf="@id/v_list_header_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/v_list_header_title">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/v_list_header_icon"
            android:layout_width="@dimen/spacing_24"
            android:layout_height="@dimen/spacing_24"
            android:layout_gravity="end|center_vertical"
            app:srcCompat="@drawable/selector_spinner_toggle_text"
            app:tint="@color/gray_2" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/v_list_header_action"
            style="@style/TextStyle.Regular18.Red"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/spacing_1"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:text="@string/main_add_invoice_add_products" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>