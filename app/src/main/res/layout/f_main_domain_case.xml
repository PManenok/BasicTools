<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/spacing_12">

        <com.google.android.material.textview.MaterialTextView
            style="@style/TextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/domain_case_game_title"/>

        <com.google.android.material.textview.MaterialTextView
            style="@style/TextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/domain_case_range_number"
            android:layout_marginTop="@dimen/spacing_16"/>

        <by.esas.tools.inputfieldview.InputFieldView
            android:id="@+id/f_domain_case_range"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_add_value"
            android:inputType="number"
            android:layout_marginTop="@dimen/spacing_4"/>

        <com.google.android.material.textview.MaterialTextView
            style="@style/TextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/domain_case_add_your_number"
            android:layout_marginTop="@dimen/spacing_4"/>

        <by.esas.tools.inputfieldview.InputFieldView
            android:id="@+id/f_domain_case_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_add_value"
            android:inputType="number"/>

        <Button
            android:id="@+id/f_domain_case_play_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/domain_case_play"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/spacing_22"/>

    </LinearLayout>

</layout>