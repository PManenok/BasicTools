<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="by.esas.tools.screens.listheader.ListheaderVM" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/spacing_12"
        android:paddingEnd="@dimen/spacing_12"
        android:paddingTop="@dimen/spacing_12">

        <by.esas.tools.customswitch.CustomSwitch
            android:id="@+id/f_main_listheader_switcher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:switchTitle="@string/listheader_switcher"
            app:switchTitleTextAppearance="@style/TextStyle"
            app:switchInfo="@string/listheader_switcher_info"/>

        <com.google.android.material.textview.MaterialTextView
            style="@style/TextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/listheader_case_1"
            android:layout_marginTop="@dimen/spacing_30"/>

        <by.esas.tools.listheader.ListHeader
            android:id="@+id/f_main_listheader_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:listTitle="@string/listheader_title"
            app:listTitleTextAppearance="@style/TextStyle"
            app:listArrowIcon="@drawable/ic_arrow_down"
            app:listArrowTint="@color/black"
            app:listContainerClickable="true"
            android:layout_marginTop="@dimen/spacing_4">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/listheader_test_text"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/listheader_test_text"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/listheader_test_text"/>

        </by.esas.tools.listheader.ListHeader>

        <Button
            android:id="@+id/f_main_listheader_add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add"
            android:layout_gravity="center"/>

        <com.google.android.material.textview.MaterialTextView
            style="@style/TextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/listheader_case_2"
            android:layout_marginTop="@dimen/spacing_30"/>

        <by.esas.tools.listheader.ListHeader
            android:id="@+id/f_main_listheader_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:listTitleTextAppearance="@style/TextStyle"
            app:listArrowIcon="@drawable/ic_arrow_down"
            app:listArrowTint="@color/black"
            android:layout_marginTop="@dimen/spacing_4"/>

        <com.google.android.material.textview.MaterialTextView
            style="@style/TextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/listheader_case_3"
            android:layout_marginTop="@dimen/spacing_30"/>

        <by.esas.tools.listheader.ListHeader
            android:id="@+id/f_main_listheader_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:listTitle="List title"
            app:listTitleTextAppearance="@style/TextStyle"
            app:listAction="@string/listheader_click"
            app:listContainerClickable="true"
            android:layout_marginTop="@dimen/spacing_4"/>

        <LinearLayout
            android:id="@+id/f_main_listheader_hidden_lay_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_4"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/listheader_test_text"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/listheader_test_text"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/listheader_test_text"/>

        </LinearLayout>

    </LinearLayout>
    </ScrollView>

</layout>