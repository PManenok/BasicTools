<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="handler"
            type="by.esas.tools.screens.access_container.dialog.PasswordDialog" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:theme="@style/AppTheme">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/df_password_top_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_56"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/spacing_8"
            android:paddingEnd="@dimen/spacing_8"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/df_password_top_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="@{handler.btnEnabled}"
                android:focusable="true"
                android:onClick="@{()->handler.onBackClick()}"
                android:padding="@dimen/spacing_8"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_navigate_back" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/df_password_top_bar_title"
                style="@style/TextStyle.Center.Regular24"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_8"
                android:layout_marginEnd="@dimen/spacing_8"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="@string/label_password"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/df_password_top_menu"
                app:layout_constraintStart_toEndOf="@id/df_password_top_back"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/df_password_top_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_8"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_language" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/df_password_top_bar_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorDivider"
            app:layout_constraintTop_toBottomOf="@id/df_password_top_bar" />

        <by.esas.tools.inputfieldview.InputFieldView
            android:id="@+id/df_password_field"
            style="@style/FieldStyle.WithLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_16"
            android:layout_marginTop="@dimen/spacing_40"
            android:layout_marginEnd="@dimen/spacing_16"
            android:inputType="text|textPassword|textNoSuggestions"
            android:text="@={handler.password}"
            app:inputEditable="true"
            app:inputEndDrawable="@drawable/selector_password_toggle"
            app:inputEndIconMode="password_toggle"
            app:inputLabel="@string/common_password_hint"
            app:layout_constraintBottom_toTopOf="@id/df_password_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/df_password_top_bar_divider"
            app:layout_constraintVertical_bias="0.35"
            tools:text="1234" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/df_password_forgot"
            style="@style/TextStyle.Normal16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/spacing_16"
            android:background="?attr/selectableItemBackground"
            android:clickable="@{handler.btnEnabled}"
            android:focusable="true"
            android:onClick="@{() -> handler.onForgotClick()}"
            android:paddingStart="@dimen/spacing_16"
            android:paddingTop="@dimen/spacing_8"
            android:paddingEnd="0dp"
            android:paddingBottom="@dimen/spacing_8"
            android:text="@string/auth_login_forgot_password"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/df_password_field"
            app:visibilityGone="@{handler.showForgotPassword}"
            tools:ignore="RtlSymmetry" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/df_password_button"
            style="@style/ButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_16"
            android:layout_marginEnd="@dimen/spacing_16"
            android:layout_marginBottom="@dimen/spacing_8"
            android:enabled="@{handler.btnEnabled}"
            android:onClick="@{() -> handler.onPasswordClick()}"
            android:text="@string/auth_login_login_btn"
            app:layout_constraintBottom_toTopOf="@id/df_password_another_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_goneMarginBottom="@dimen/spacing_32" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/df_password_another_btn"
            style="@style/TextButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_16"
            android:layout_marginEnd="@dimen/spacing_16"
            android:layout_marginBottom="@dimen/spacing_32"
            android:enabled="@{handler.btnEnabled}"
            android:onClick="@{() -> handler.onAnotherClick()}"
            android:text="@string/auth_re_login_another"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_goneMarginBottom="@dimen/spacing_32"
            app:visibilityGone="@{handler.showAnotherBtn}" />

        <ProgressBar
            android:id="@+id/df_password_circle_progress"
            style="@style/ProgressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="@{handler.showProgress}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>