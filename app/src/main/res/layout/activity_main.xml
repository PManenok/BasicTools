<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="by.esas.tools.screens.MainVM" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true">

        <fragment
            android:id="@+id/a_main_nav_host_fragment"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:defaultNavHost="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/a_main_top_bar"
            app:navGraph="@navigation/n_main" />

        <by.esas.tools.topbarview.TopbarView
            android:id="@+id/a_main_top_bar"
            style="@style/TopBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:barShowActionIcon="false"
            app:barShowDivider="true"
            app:barShowNavIcon="@{viewModel.hasBackBtn}"
            app:barTitleText="@{viewModel.header}"
            app:buttonsClickable="@{viewModel.controlsEnabled}"
            app:layout_constraintTop_toTopOf="parent"
            tools:barTitleText="@string/case_label_recycler_sticky" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>