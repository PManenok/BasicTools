<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="by.esas.tools.screens.recycler.sticky_case.StickyCaseVM" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/spacing_16">

        <TextView
            android:id="@+id/f_main_sticky_recycler_title"
            style="@style/TextStyle.Normal16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/recycler_case_sticky_title"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/f_main_sticky_recycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/spacing_8"
            android:layout_marginBottom="@dimen/spacing_12"
            app:layout_constraintBottom_toTopOf="@id/f_main_sticky_recycler_add_btn"
            app:layout_constraintTop_toBottomOf="@id/f_main_sticky_recycler_title"
            tools:itemCount="3"
            tools:listitem="@layout/i_sticky_recycler_header" />

        <EditText
            android:id="@+id/f_main_sticky_recycler_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_12"
            android:layout_marginBottom="@dimen/spacing_12"
            android:text="@={viewModel.newEntity}"
            app:layout_constraintBottom_toTopOf="@id/f_main_sticky_recycler_delete_btn"
            app:layout_constraintEnd_toStartOf="@id/f_main_sticky_recycler_add_btn"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/f_main_sticky_recycler_add_btn"
            style="@style/OutlineButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_12"
            android:onClick="@{()->viewModel.addItem()}"
            android:text="@string/recycler_cases_add_button"
            app:layout_constraintBottom_toTopOf="@id/f_main_sticky_recycler_delete_btn"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/f_main_sticky_recycler_delete_btn"
            style="@style/OutlineButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="@{()->viewModel.clearItems()}"
            android:text="@string/recycler_cases_delete_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/f_main_sticky_recycler_set_btn"
            style="@style/OutlineButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="@{()->viewModel.setAnotherList()}"
            android:text="@string/recycler_cases_set_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>