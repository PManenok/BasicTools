<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="by.esas.tools.screens.util.switchManager.UtilSwitchManagerVM" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Switch manager from Util module предназначен чтобы enable and disable views on the screen. With first custom switcher you can enable/disable views using Base Switch manager from module, second one - will do the same using переопределенный switch manager"/>


        <by.esas.tools.customswitch.CustomSwitch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:switchTitle="hello"
            />

    </LinearLayout>
</layout>