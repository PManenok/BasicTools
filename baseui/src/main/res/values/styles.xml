<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!-- Material Alert Dialog Style -->
    <style name="AppTheme.CustomMaterialDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="materialAlertDialogBodyTextStyle">
            @style/AppTheme.MaterialDialog.TextAppearance.Small
        </item>
        <item name="materialAlertDialogTitleTextStyle">
            @style/AppTheme.MaterialDialog.TextAppearance.Medium
        </item>
        <item name="materialButtonStyle">@style/AppTheme.MaterialDialog.Button</item>
    </style>

    <style name="AppTheme.MaterialDialog.TextAppearance.Small" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
        <item name="android:textSize">@dimen/textSizeSmall</item>
        <item name="android:singleLine">false</item>
        <item name="singleLine">false</item>
        <item name="android:maxLines">10</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>

    <style name="AppTheme.MaterialDialog.TextAppearance.Medium" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/textSizeDefault</item>
        <item name="android:textColor">@color/colorTextDefault</item>
    </style>

    <style name="AppTheme.MaterialDialog.Button" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textSize">@dimen/textSizeDefault</item>
    </style>
    <!-- Material Alert Dialog Style End-->
</resources>