<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="handler"
            type="by.esas.tools.dialog.SearchFilterDialog"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorBackground">

        <by.esas.tools.topbarview.TopbarView
            android:id="@+id/df_filter_topbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:barEndActionText="Reset"
            app:barEndActionTextAppearance="@style/TextStyle.Normal16.Red"
            app:barNavIcon="@drawable/ic_arrow_back"
            app:barNavIconTint="@color/textColor"
            app:barShowNavIcon="true"
            app:barTitleText="Filter"
            app:barTitleTextAppearance="@style/TextStyle"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/spacing_12"
                android:paddingEnd="@dimen/spacing_12"
                android:paddingBottom="@dimen/spacing_12">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_28"
                    android:text="@string/case_status_dialog_title" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="2"
                    android:layout_marginTop="@dimen/spacing_8">

                    <CheckBox
                        android:id="@+id/df_filter_status_checked"
                        style="@style/CheckBoxStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/case_status_checked" />

                    <CheckBox
                        android:id="@+id/df_filter_status_failed"
                        style="@style/CheckBoxStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/case_status_failed" />

                    <CheckBox
                        android:id="@+id/df_filter_status_in_progress"
                        style="@style/CheckBoxStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/spacing_30"
                        android:text="@string/case_status_in_process" />

                    <CheckBox
                        android:id="@+id/df_filter_status_unchecked"
                        style="@style/CheckBoxStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/case_status_unchecked" />

                </GridLayout>

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_28"
                    android:text="@string/filter_modules" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:layout_marginTop="@dimen/spacing_8">

                    <CheckBox
                        android:id="@+id/df_filter_module_accesscontainer"
                        style="@style/CheckBoxStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/spacing_30"
                        android:text="accesscontainer" />

                    <CheckBox
                        android:id="@+id/df_filter_module_basedaggerui"
                        style="@style/CheckBoxStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="basedaggerui" />

                    <CheckBox
                        android:id="@+id/df_filter_module_baseui"
                        style="@style/CheckBoxStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/spacing_30"
                        android:text="baseui" />

                    <CheckBox
                        android:id="@+id/df_filter_module_biometric_decryption"
                        style="@style/CheckBoxStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="biometric_decryption" />

                    <CheckBox
                        android:id="@+id/df_filter_module_cardline"
                        style="@style/CheckBoxStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="cardline" />

                    <CheckBox
                        android:id="@+id/df_filter_module_checker"
                        style="@style/CheckBoxStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="checker" />

                    <CheckBox
                        android:id="@+id/df_filter_module_customswitch"
                        style="@style/CheckBoxStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="customswitch" />

                    <CheckBox
                        android:id="@+id/df_filter_module_dialog"
                        style="@style/CheckBoxStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="dialog" />

                    <CheckBox
                        android:id="@+id/df_filter_module_dimen_util"
                        style="@style/CheckBoxStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="dimen_util" />

                    <CheckBox
                        android:id="@+id/df_filter_module_domain"
                        style="@style/CheckBoxStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="domain" />

                    <CheckBox
                        android:id="@+id/df_filter_module_inputfieldview"
                        style="@style/CheckBoxStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="inputfieldview" />

                    <CheckBox
                        android:id="@+id/df_filter_module_listheader"
                        style="@style/CheckBoxStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="listheader" />

                    <CheckBox
                        android:id="@+id/df_filter_module_logger"
                        style="@style/CheckBoxStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="logger" />

                    <CheckBox
                        android:id="@+id/df_filter_module_numpad"
                        style="@style/CheckBoxStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="numpad" />

                    <CheckBox
                        android:id="@+id/df_filter_module_pinview"
                        style="@style/CheckBoxStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="pinview" />

                    <CheckBox
                        android:id="@+id/df_filter_module_recycler"
                        style="@style/CheckBoxStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="recycler" />

                    <CheckBox
                        android:id="@+id/df_filter_module_timeparser"
                        style="@style/CheckBoxStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="timeparser" />

                    <CheckBox
                        android:id="@+id/df_filter_module_topbarview"
                        style="@style/CheckBoxStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="topbarview" />

                    <CheckBox
                        android:id="@+id/df_filter_module_util"
                        style="@style/CheckBoxStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="util" />

                </GridLayout>

            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/df_filter_show_result_btn"
            style="@style/ButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show result"
            android:layout_marginStart="@dimen/spacing_12"
            android:layout_marginEnd="@dimen/spacing_12"
            android:layout_marginBottom="@dimen/spacing_24"/>
    </LinearLayout>
</layout>