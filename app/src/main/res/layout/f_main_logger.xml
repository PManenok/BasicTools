                    android:text="@string/logger_fragment_case_3" />

                <Button
                    android:id="@+id/f_logger_error_btn"
                    style="@style/ButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/logger_fragment_case_3_btn" />
            </LinearLayout>

