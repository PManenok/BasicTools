<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorSecondary</item>

        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="FieldStyle">
        <item name="inputEditTextStyle">@style/EditTextStyle</item>
        <item name="inputStrokeWidth">1dp</item>
        <item name="inputIconsSize">@dimen/spacing_32</item>
        <item name="inputIconsPadding">@dimen/spacing_4</item>
        <item name="inputBoxBgColor">@color/main_color_4</item>
        <item name="inputStrokeColor">@color/inputfieldview_selector_stroke_color</item>
        <item name="inputShowBottomContainer">false</item>
        <item name="inputLabelType">hide</item>
        <item name="endIconMode">clear_text</item>
    </style>

    <style name="FieldStyle.WithLabel">
        <item name="inputLabelType">on_top</item>
    </style>

    <style name="HintTextStyle">
        <item name="android:textColor">@color/main_color_2</item>
        <item name="android:textSize">@dimen/_11ssp</item>
    </style>

    <style name="TextStyle">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="TextStyle.Normal42">
        <item name="android:textSize">@dimen/_26ssp</item>
    </style>

    <style name="TextStyle.Normal32">
        <item name="android:textSize">@dimen/_20ssp</item>
    </style>

    <style name="TextStyle.Center">
        <item name="android:gravity">center</item>
    </style>

    <style name="TextStyle.Center.Regular24">
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TextStyle.Normal24">
        <item name="android:textSize">@dimen/_15ssp</item>
    </style>

    <style name="TextStyle.Normal16">
        <item name="android:textSize">@dimen/_11ssp</item>
    </style>

    <style name="TextStyle.Normal16.Red">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="TextStyle.Medium16">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditTextStyle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColorHint">@color/main_color_2</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:inputType">text</item>
        <item name="singleLine">true</item>
    </style>

    <style name="CaseItemTextStyle">
        <item name="android:textColor">@color/main_color_2</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="SwitcherStyle">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="trackTint">@color/switcher_selector</item>
        <item name="thumbTint">@color/white</item>
        <item name="switchTitleTextAppearance">@style/TextStyle</item>
        <item name="switchInfoTextAppearance">@style/HintTextStyle</item>
    </style>

    <style name="ProgressBarStyle" parent="Widget.AppCompat.ProgressBar">
        <item name="android:minHeight">@dimen/spacing_80</item>
        <item name="android:minWidth">@dimen/spacing_80</item>
        <item name="android:maxHeight">@dimen/spacing_80</item>
        <item name="android:maxWidth">@dimen/spacing_80</item>
    </style>

    <style name="NumpadStyle">
        <item name="android:minWidth">@dimen/spacing_300</item>
        <item name="android:minHeight">@dimen/spacing_400</item>
    </style>

    <style name="CustomSwitcherTitleTextStyle" parent="TextStyle">
        <item name="android:textColor">@color/purple</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="CustomSwitcherTextStyleBold" parent="TextStyle">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomSwitcherTextStyleNormal" parent="TextStyle">
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CustomSwitcherInfoTextStyle">
        <item name="android:textColor">@color/purple_light</item>
        <item name="android:textStyle">italic</item>
    </style>


    <style name="TopbarTextStyle">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="TopbarTextStyle.Red" parent="TopbarTextStyle">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="PinStyle">
        <item name="pinAmount">6</item>
        <item name="pinInAnimationDuration">150</item>
        <item name="pinOutAnimationDuration">150</item>
        <item name="pinBetweenMargin">@dimen/spacing_8</item>
        <item name="pinFilledIcon">@drawable/ic_pin_star_filled</item>
        <item name="pinUnfilledIcon">@drawable/ic_pin_star_unfilled</item>
        <item name="pinFilledTint">@color/colorStrokeOutline</item>
        <item name="pinUnfilledTint">@color/colorStrokeOutline</item>
    </style>

    <style name="CustomInputField">
        <item name="endIconDrawable">@drawable/ic_star</item>
        <item name="endIconMode">custom</item>
    </style>

    <style name="InputfieldViewTextStyle">
        <item name="android:textColor">@color/inputfieldview_selector_text_color</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="NumpadTextNumbersStyle">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="BaseUI_TextStyle">
        <item name="android:textColor">@color/baseui_textColor</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="BaseUI_MinorTextStyle">
        <item name="android:textColor">@color/baseui_minorTextColor</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="TopBarStyle">
        <item name="barContainerHeight">@dimen/spacing_56</item>
        <item name="barContainerPaddingEnd">@dimen/spacing_8</item>
        <item name="barContainerPaddingStart">@dimen/spacing_8</item>

        <item name="barNavIcon">@drawable/ic_navigate_back</item>
        <item name="barNavIconSize">@dimen/spacing_48</item>
        <item name="barNavIconPadding">@dimen/spacing_8</item>
        <item name="barNavIconTint">@color/main_color_2</item>
        <item name="barShowNavIcon">true</item>

        <item name="barActionIcon">@drawable/ic_cancel</item>
        <item name="barActionIconSize">@dimen/spacing_56</item>
        <item name="barActionIconPadding">@dimen/spacing_8</item>
        <item name="barActionIconTint">@color/main_color_2</item>
        <item name="barShowActionIcon">true</item>

        <item name="barTitleTextAppearance">@style/TextStyle</item>
        <item name="barTitlePaddingEnd">@dimen/spacing_8</item>
        <item name="barTitlePaddingStart">@dimen/spacing_8</item>

        <item name="barDividerColor">@color/main_color_4</item>
        <item name="barDividerHeight">@dimen/spacing_1</item>
        <item name="barShowDivider">true</item>
    </style>

    <style name="CheckBoxStyle">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:button">@drawable/selector_check_box</item>
        <item name="buttonTint">@color/textColor</item>
    </style>

    <style name="SecondCheckBoxStyle" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:button">@drawable/selector_check_box</item>
        <item name="buttonTint">@color/colorPrimaryDark</item>
        <item name="android:gravity">center|start</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textDirection">locale</item>
        <item name="android:paddingStart">@dimen/spacing_8</item>
        <item name="android:minHeight">@dimen/spacing_56</item>
    </style>

    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Action">
        <item name="ensureMinTouchTargetSize">false</item>
        <item name="chipMinHeight">@dimen/spacing_40</item>
        <item name="chipBackgroundColor">@color/main_color_4</item>
        <item name="chipCornerRadius">@dimen/spacing_24</item>
        <item name="chipEndPadding">@dimen/spacing_10</item>
        <item name="chipStartPadding">@dimen/spacing_16</item>
        <item name="chipIcon">@drawable/ic_cancel</item>
        <item name="chipIconTint">@color/textColor</item>
        <item name="chipIconSize">@dimen/spacing_24</item>
        <item name="iconEndPadding">@dimen/spacing_12</item>
        <item name="textStartPadding">0dp</item>
        <item name="android:textColor">@color/main_color_1</item>
        <item name="android:textAppearance">@style/TextStyle.Normal16</item>
    </style>

    <!--##################################### Button styles #####################################-->

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">@dimen/spacing_8</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">@dimen/spacing_56</item>
    </style>

    <style name="OutlineButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="cornerRadius">@dimen/spacing_10</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">@dimen/spacing_56</item>
    </style>

    <style name="OutlineButtonStyle.Small">
        <item name="android:minHeight">@dimen/spacing_36</item>
    </style>

    <style name="TextButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">@dimen/spacing_56</item>
    </style>

    <style name="TextButtonStyle.Mini">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:minHeight">@dimen/spacing_48</item>
    </style>

    <!--################################## Button styles END ####################################-->

    <style name="SwitchStyle" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="colorOnSurface">@color/green</item>
        <item name="colorSecondary">@color/main_color_3</item>
    </style>
</resources>
